<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="../css/style.css" />

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h2><b><%= listings.title %></b></h2>
  </div>
  <div class="card col-6 offset-3">
    <img
      src="<%= listings.image %>"
      class="card-img-top show-img"
      alt="Listing_img"
    />
    <div class="card-body">
      <p class="card-text">Owned by <%= listings.owner.username %></p>
      <p class="card-text">
        <% if (listings.price !== null) { %> &#8377;<%=
        listings.price.toLocaleString("en-In") %> <% } else { %> &#8377;N/A <% }
        %>
      </p>
      <p class="card-text"><%= listings.description %></p>
      <p class="card-text"><%= listings.location %></p>
      <p class="card-text"><%= listings.country %></p>
    </div>
  </div>
  <!-- here if statement is used for authorization -->
  <% if(currentUser && currentUser._id.equals(listings.owner._id)) {%>
  <div class="btns">
    <button class="btn1 btn btn-dark col-1 offset-3">
      <a href="/listings/<%= listings._id %>/edit">Edit</a>
    </button>

    <form action="/listings/<%= listings._id %>?_method=DELETE" method="POST">
      <button class="btn btn-dark offset-5">DELETE</button>
    </form>
  </div>
  <% } %> <% if(currentUser) { %>
  <div>
    <form
      method="POST"
      action="/listings/<%= listings._id %>/reviews"
      class="mb-3 needs-validation"
      novalidate
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-basic">
          <legend>First rating:</legend>
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="reviews[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="reviews[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="reviews[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="reviews[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="reviews[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="reviews[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="reviews[comment]"
          id="comment"
          cols="20"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a comment</div>
        <button class="btn btn-dark mb-3 mt-3">Submit</button>
      </div>
    </form>
  </div>
  <% } %>
  <div>
    <hr />
    <h3>Reviews</h3>
    <% if(!listings.review) {%>
    <p class="card-text">no review yet</p>
    <% } else { %> <% for(review of listings.review) { %>
    <div class="card">
      <div class="inner-card card-body">
        <h5 class="card-text"><%= review.author.username %></h5>
        <p class="starability-result" data-rating="<%= review.rating %>"></p>
        <p class="card-text">Comment: <%= review.comment %></p>
        <form
          method="POST"
          action="/listings/<%= listings._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-dark btn-sm">DELETE</button>
        </form>
      </div>

      <% } }%>
    </div>
  </div>
</div>
