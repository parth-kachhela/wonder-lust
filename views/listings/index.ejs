<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/style.css" />

<h2>All lists</h2>
<!-- <form action="/listings/new" method="GET">
    <button>add a new</button>
  </form> -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listings of allListings) { %>
  <a href="/listings/<%= listings._id %>" class="listings-links">
    <div class="card col">
      <img
        src="<%= listings.image %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay">.</div>

      <div class="card-body">
        <p class="card-text">
          <b><%= listings.title %></b> <br />
          <% if (listings.price !== null) { %> &#8377;<%=
          listings.price.toLocaleString("en-In") %> <% } else { %> &#8377;N/A <%
          } %>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
